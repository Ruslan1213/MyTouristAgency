@model PagedList.IPagedList<TouristAgency.Domain.Models.EfModels.HotelsType>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/MyStyle.css">
@{
    ViewBag.Title = "Index";
}
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Тип отеля")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdHotelsType }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdHotelsType }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdHotelsType })
                </td>
            </tr>
        }

    </table>
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
    <div class="container col-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
