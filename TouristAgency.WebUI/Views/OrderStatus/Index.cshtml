@model PagedList.IPagedList<TouristAgency.Domain.Models.EfModels.OrderStatus>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/MyStyle.css">
@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Стастус заказа")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrdersStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdOrder }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdOrder }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdOrder })
            </td>
        </tr>
    }

</table>
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
    <div class="container col-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
