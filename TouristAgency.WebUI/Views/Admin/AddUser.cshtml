@model TouristAgency.Domain.Models.UserCreatrdByAdmin.UserCreatedByAdmin
@{
    ViewBag.Title = "Регистрация";
}
<link rel="stylesheet" href="~/Content/MyStyle.css">
<hr class="myhr" />
<div class="brad container d-flex justify-content-center row bg-light p-5 w-50 m-lg-auto">
    @using (Html.BeginForm())
    {
        <div class="col-md-10">
            Администратор
            @Html.RadioButtonFor(model => model.Role, "admin")
            Менеджер
            @Html.RadioButtonFor(model => model.Role, "manager")
            Пользователь
            @Html.RadioButtonFor(model => model.Role, "user", new { @Checked = "true" })
        </div>
        @Html.AntiForgeryToken()
        <h4>Создайте новую учетную запись.</h4>
        <hr class="myhr" />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-10 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Регистрация" />
            </div>
        </div>
        <hr class="myhr" />
        <hr class="myhr" />
        <hr class="myhr" />
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
